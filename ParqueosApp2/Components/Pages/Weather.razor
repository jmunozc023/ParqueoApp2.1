@page "/weather"
@attribute [StreamRendering]


<PageTitle>Administracion de parqueos</PageTitle>

<h1>Administracion de parqueos</h1>

<p>Portal para administracion de parqueos.</p>

@if (parqueos == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Nombre Parqueo</th>
                <th>Ubicacion</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var parqueo in parqueos)
            {
                <tr>
                    <td>@parqueo.Nombre_Parqueo</td>
                    <td>@parqueo.Ubicacion</td>
                    <td>
                        <button @onclick="() => EditParqueo(parqueo)">Editar</button>
                        <button @onclick="() => DeleteParqueo(parqueo)">Eliminar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@if (selectedParqueo != null)
{
    <h3>Editar Parqueo</h3>
    <input @bind="selectedParqueo.Nombre_Parqueo" placeholder="Nombre Parqueo" />
    <input @bind="selectedParqueo.Ubicacion" placeholder="Ubicacion" />
    <button @onclick="SaveParqueo">Guardar</button>
}

@code {
    private List<Parqueo>? parqueos;
    private Parqueo? selectedParqueo;

    protected override async Task OnInitializedAsync()
    {
        // Simulate asynchronous loading to demonstrate streaming rendering
        await Task.Delay(500);

        // Load initial data
        parqueos = new List<Parqueo>
        {
            new Parqueo { Nombre_Parqueo = "Parqueo 1", Ubicacion = "Ubicacion 1" },
            new Parqueo { Nombre_Parqueo = "Parqueo 2", Ubicacion = "Ubicacion 2" }
        };
    }

    private void EditParqueo(Parqueo parqueo)
    {
        selectedParqueo = parqueo;
    }

    private void SaveParqueo()
    {
        selectedParqueo = null;
    }

    private void DeleteParqueo(Parqueo parqueo)
    {
        parqueos?.Remove(parqueo);
    }

    private class Parqueo
    {
        public string? Nombre_Parqueo { get; set; }
        public string? Ubicacion { get; set; }
    }
}





